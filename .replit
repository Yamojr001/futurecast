modules = ["nodejs-20", "php-8.2", "web", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel + React App"

[[workflows.workflow]]
name = "Laravel + React App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve --host=localhost --port=8000\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names=laravel,queue,vite --kill-others"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["php", "artisan", "serve", "--host=0.0.0.0", "--port=5000"]
build = ["npm", "run", "build"]
